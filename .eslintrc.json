{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
		"prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
		"init-declarations": ["error", "always"],
		"no-console":"warn",
		"no-plusplus": "off",
		"no-use-before-define": ["error", { "functions": false }],
		"padded-blocks": "off",
		"quotes": ["error", "double", { "allowTemplateLiterals": true }],
		"semi": ["error", "always"]
    }
}
